<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background">

    <TextView
            android:id="@+id/name_entry_data_colletion_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_de_pruebas"
            android:layout_toRightOf="@+id/inquiry_entry_data_collection_icon"
            android:layout_marginTop="10dp"
            android:width="220dp"
            android:layout_centerVertical="true"
            style="@style/CustomTheme.TextView.Item"
            />
        <TextView
            android:id="@+id/inquiry_entry_data_colletion_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_de_pruebas"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            style="@style/CustomTheme.TextView.Item.Title"
            android:layout_below="@+id/name_entry_data_colletion_list"
            android:layout_toRightOf="@+id/inquiry_entry_data_collection_icon"
            />

    <ImageView
            android:id="@+id/inquiry_entry_data_collection_icon"
            style="@style/CustomTheme.ListItem.ImageView.Left"
            android:contentDescription="@string/icon_list"/>

    <TextView android:id="@+id/notificationText"
              style="@style/CustomTheme.NotificationText" ></TextView>
</RelativeLayout>