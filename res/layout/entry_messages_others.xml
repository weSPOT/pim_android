<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="right"
                android:padding="10px"
                android:layout_margin="4dp"
                android:background="@drawable/background_message_others_chat">
    <TextView
            android:id="@+id/author_entry_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:paddingRight="14dp"
            android:paddingLeft="2dp"
            android:text="test"/>

    <TextView
            android:id="@+id/name_entry_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/inquiry_entry_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:text="test"/>
    <TextView
            android:id="@+id/timeStampMessage"
            android:layout_below="@id/name_entry_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTheme.TimeSteampMessageOthers"
            android:text="7:12"/>

</RelativeLayout>