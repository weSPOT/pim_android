<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NEW CODE -->
    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/app.base.black</item>
        <item name="android:windowBackground">@drawable/mainmenu_960</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomTheme.ActionBar</item>
        <item name="android:webViewStyle">@style/CustomTheme.WebView</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app.base.blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/app.base.blue</item>
        <item name="backgroundStacked">@color/app.base.red</item>
        <item name="backgroundSplit">@color/app.base.black</item>
    </style>

    <!-- OLD STUFF -->
    <style name="CustomTheme.Transparent">
        <!--<item name="android:background">@color/app.base.white</item>-->
        <!--<item name="android:background">@drawable/login_960</item>-->
        <item name="android:textColor">@color/app.base.blue</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:windowBackground">@drawable/login_960</item>
    </style>

    <style name="CustomTheme.TextView">
        <item name="android:background">@color/app.base.white.transparent</item>
    </style>

    <style name="CustomTheme.TextView.Item" parent="CustomTheme.TextView">
        <item name="android:textColor">@color/app.base.black</item>
        <item name="android:textSize">@dimen/entry.datacollection.name</item>
    </style>

    <style name="CustomTheme.TextView.Item.Title" parent="CustomTheme.TextView">
        <item name="android:textColor">@color/app.base.black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/entry.datacollection.name</item>
    </style>

    <style name="CustomTheme.TextView.Title1" parent="CustomTheme.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/inquiry.fragments.titles</item>
        <item name="android:textColor">@color/app.base.white</item>
        <item name="android:paddingTop">@dimen/inquiry.fragments.titles.paddingTop</item>
        <item name="android:paddingBottom">@dimen/inquiry.fragments.titles.paddingBottom</item>
    </style>



    <style name="CustomTheme.TextView.Title2" parent="CustomTheme.TextView.Title1">

    </style>

    <style name="CustomTheme.TextView.Title3" parent="CustomTheme.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/inquiry.fragments.titles3</item>
        <item name="android:padding">@dimen/inquiry.fragments.titles.paddingBottom</item>
    </style>


    <style name="CustomTheme.TextView.Title4" parent="CustomTheme.TextView">
        <item name="android:textSize">@dimen/inquiry.fragments.description</item>
        <item name="android:padding">@dimen/inquiry.fragments.titles.paddingBottom</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomTheme.ActionBar.TitleTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/app.base.white</item>
    </style>

    <style name="CustomTheme.ActionBar.Subtitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="CustomTheme.WebView" parent="@android:style/Widget.WebView">
        <item name="android:background">@color/app.base.white.transparent</item>
        <!--<item name="android:background">#ffffdcee</item>-->
    </style>

    <style name="CustomTheme.ListItem">
        <item name="android:background">@drawable/pim_listitem</item>
        <!--<item name="android:background">#ffffdcee</item>-->
    </style>

    <style name="CustomTheme.ListItemImageView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="CustomTheme.ListItem.ImageView.Left" parent="CustomTheme.ListItemImageView">
        <item name="android:layout_height">@dimen/listitem.imageview.left.height</item>
        <item name="android:layout_width">@dimen/listitem.imageview.left.width</item>
    </style>
    <style name="CustomTheme.ListItem.ImageView.Right" parent="CustomTheme.ListItemImageView">
        <item name="android:layout_height">@dimen/listitem.imageview.right.height</item>
        <item name="android:layout_width">@dimen/listitem.imageview.right.width</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="CustomTheme.NotificationText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/pim_listitem_notification_text</item>
        <item name="android:textColor">@color/app.base.white</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="CustomTheme.TimeSteampMessage">
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/pim_listitem_notification_text</item>
        <item name="android:textColor">@color/app.base.white</item>
        <item name="android:textSize">8dp</item>
    </style>


    <style name="CustomTheme.TimeSteampMessageOthers">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/pim_listitem_notification_text</item>
        <item name="android:textColor">@color/app.base.white</item>
        <item name="android:textSize">8dp</item>
    </style>



    <style name="CustomTheme.RequestFriendship">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/app.base.white</item>
        <item name="android:layout_height">@dimen/listitem.imageview.left.height</item>
        <item name="android:layout_width">@dimen/listitem.imageview.left.width</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="CustomTheme.ActionBar.ListItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/app.base.red</item>
    </style>


    <style name="CustomTheme.Profile">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


</resources>